struct Light %common%
{
    float3 Position;
    uint Type;
    float4 Color;
    float3 Direction;
    float Pad0;
    float4 Attenuation; // const, linear, quad terms and radius
};

struct LightBuffer %common%
{
    Light light[256];
};

constantBuffer<LightBuffer> lights %bindTo = 2, space = 1%;
uniform uint LIGHTS_COUNT;